Label:
    @text
    @name
    @parent
    index = 0
    
    new(text):
        .text = text
        .name = ".label" + class.index.to_string()
        class.index = class.index + 1

    @get_name():
        return .parent.name + .name
    
    @do(tk):
        tk.do("label", .get_name(), "-text", .text)
